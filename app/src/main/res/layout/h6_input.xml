<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/E8_9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/header_home"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userDetailE10N1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="入力の確認・編集"
            android:textColor="#666666"
            android:textSize="16dp"
            tools:name="通院予定入力" />

        <ImageView
            android:id="@+id/backH6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_close"
            tools:name="Combined Shape" />

        <TextView
            android:id="@+id/helpH6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_marginRight="20sp"
            android:background="@drawable/mask"
            android:clickable="true"
            android:gravity="center"
            android:text="？"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            tools:name="？" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/header"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:text="撮影画像" />

            <TextView
                android:id="@+id/HospitalNameF6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageViewKensaH6"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="19dp"
                android:text="日付"
                android:textColor="#666666" />

            <DatePicker
                android:id="@+id/date_pickerH6"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_below="@+id/HospitalNameF6"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"
                android:layout_marginTop="0dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:orientation="horizontal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eraseDataH6"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/cancelH6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/button_round_white"
                    android:clickable="true"
                    android:text="  キャンセル  "
                    android:textColor="#0CBBB6"
                    android:textSize="18sp"
                    tools:name="キャンセル" />

                <TextView
                    android:id="@+id/addH6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/button_round"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="　保存　"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_pickerH6"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="19dp"
                android:text="検査機関" />

            <EditText
                android:id="@+id/editTextKensaNameH6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/textview"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:ems="10"
                android:hint="〇〇センター"
                android:inputType="textShortMessage" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/editTextKensaNameH6"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="19dp"
                android:text="検査結果" />

            <EditText
                android:id="@+id/editTextKensaH6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/textView12"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:ems="10"
                android:hint="AFP 10.0ng/ml \nCA15-3 25.0U/ml"
                android:inputType="textMultiLine|textLongMessage"
                android:lines="5" />

            <LinearLayout
                android:id="@+id/eraseDataH6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/editTextKensaH6"
                android:layout_marginLeft="105dp"
                android:layout_marginRight="105dp"
                android:layout_marginTop="19dp"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/button_minus" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="このデータを削除"
                    android:textColor="#FFFA0E74" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewKensaH6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView14"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:clickable="true"
                android:minHeight="170dp"
                app:srcCompat="@android:drawable/screen_background_dark_transparent" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

