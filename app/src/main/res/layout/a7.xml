<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0CBBB6">

    <ImageView
        android:id="@+id/imageLogoLargeBG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_large" />
    <ImageView
        android:src="@drawable/icon_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2" />
    <TextView
        android:gravity="center"
        android:height="36dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:lineSpacingMultiplier="1.50"
        android:text="会員登録が完了しました。"
        android:width="144dp"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />
    <TextView
        android:gravity="center"
        android:height="36dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:lineSpacingMultiplier="1.50"
        android:text="早速使ってみましょう。"
        android:width="144dp"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/buttonLoginB5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="37.0dp"
        android:background="@drawable/button_round_white"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="はじめる"
        android:textColor="#0CBBB6"
        android:textSize="20dp" />
</LinearLayout>