<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0CBBB6">

    <ImageView
        android:id="@+id/imageLogoLargeBG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_large" />
    <ImageView
        android:src="@drawable/text_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1"
        android:layout_marginTop="20dp" />
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editEmailB2"
        android:layout_marginRight="37.0dp"
        android:layout_marginLeft="37.0dp"
        android:background="#21000000"
        android:hint="メールアドレス"
        android:layout_marginTop="20dp" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editPasswordB2"
        android:layout_marginRight="35.7dp"
        android:layout_marginLeft="37.0dp"
        android:background="#21000000"
        android:layout_marginTop="20dp"
        android:hint="パスワード" />
    <TextView
        android:gravity="center"
        android:height="36dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:lineSpacingMultiplier="1.50"
        android:text="利用規約と個人情報の取り扱いに同意の上お進みください。"
        android:width="228dp"
        android:textColor="#FFFFFFFF"
        android:textSize="12sp"
        android:layout_marginTop="20dp" />
    <TextView
        android:text="同意して登録する"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegNewUser_A4"
        android:background="@drawable/button_round_white"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:textSize="20dp"
        android:layout_marginRight="37.0dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="20dp"
        android:textColor="#0CBBB6" />
    <TextView
        android:text="ログイン画面"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toLoginDisp_A4"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:textSize="12dp"
        android:layout_marginRight="37.0dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFFFF" />
</LinearLayout>