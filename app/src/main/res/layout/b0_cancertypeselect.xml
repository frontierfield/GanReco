<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/d1main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEFEFEF">
    <!--tools:context="com.example.project.d1import">-->

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/header_home"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_title_b12"
            android:layout_width="115dp"
            android:layout_height="31dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/logo_small" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="461dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/dpc_b1_2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp">


                <LinearLayout
                    android:id="@+id/okusuri"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="false"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:clickable="false"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_home_medicine_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="14.32dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_tutrial3" />

                    <TextView
                        android:id="@+id/お薬履歴label"
                        style="@style/dpc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12.24dp"
                        android:text="がんの種類を選択してください。"
                        android:textColor="#0CBBB6"
                        android:textSize="18sp"
                        tools:name="がんの種類" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="3dp">

            </TableRow>

        </TableLayout>

        <Spinner
            android:id="@+id/cancerTypeList"
            android:layout_width="299dp"
            android:layout_height="52dp"
            android:layout_above="@+id/buttonSetCancerType"
            android:layout_alignParentStart="true"
            android:layout_marginStart="43dp"
            android:layout_marginBottom="67dp"
            android:gravity="center"
            android:dropDownWidth="match_parent" />

        <TextView
            android:id="@+id/buttonSetCancerType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="121dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/button_round"
            android:gravity="center"
            android:text="　　選択　　"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </RelativeLayout>

</RelativeLayout>

