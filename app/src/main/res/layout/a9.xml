<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0CBBB6">
    <ImageView
        android:src="@drawable/logo_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageLogoLargeBG"
        android:layout_marginTop="20dp" />
    <TextView
        android:gravity="center"
        android:height="12pt"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:lineSpacingMultiplier="1.50"
        android:text="ユーザーのメールアドレスを入力してください"
        android:width="72pt"
        android:textColor="#FFFFFFFF"
        android:clickable="false"
        android:id="@+id/signUP"
        android:layout_marginTop="20dp" />
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editEmailForget"
        android:layout_marginRight="37.0dp"
        android:layout_marginLeft="37.0dp"
        android:background="#21000000"
        android:hint="メールアドレス"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/sendmailForget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="37.0dp"
        android:background="@drawable/button_round_white"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:padding="7dp"
        android:text="パスワード再設定メール送信"
        android:textColor="#0CBBB6"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/backForget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="37.0dp"
        android:background="@drawable/button_round_white"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:padding="7dp"
        android:text="ログイン画面に戻る"
        android:textColor="#0CBBB6"
        android:textSize="18dp" />
</LinearLayout>