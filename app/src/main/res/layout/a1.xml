<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo_large_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_large_bg" />

    <ImageView
        android:id="@+id/image_tutrial1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_large_bg"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:src="@drawable/image_tutrial1" />

    <ImageView
        android:id="@+id/text_tutrial1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_tutrial1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_gravity="center"
        android:layout_marginLeft="0.0dp"
        android:layout_marginRight="0.0dp"
        android:paddingTop="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/text_tutrial1" />

</RelativeLayout>
